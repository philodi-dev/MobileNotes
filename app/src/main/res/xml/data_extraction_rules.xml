<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Define what user data to include in backups -->
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="authentication.xml"/>
        <exclude domain="sharedpref" path="payment_methods.xml"/>
        <exclude domain="file" path="security/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Define what user data to include during device-to-device transfer -->
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="authentication.xml"/>
        <exclude domain="sharedpref" path="payment_methods.xml"/>
        <exclude domain="file" path="security/"/>
    </device-transfer>
</data-extraction-rules>